<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            
             x:Class="PaulNsemana1.MainPage">

    <StackLayout>
        <Label Text="TAREA SEMANA 1" FontSize="Large" TextColor="Blue" HorizontalTextAlignment="Center"></Label>
        <Entry x:Name="txtnombre" Placeholder="Ingrese su nombre"></Entry>
        <Entry x:Name="txtapellido" Placeholder="Ingrese su apellido"></Entry>
        <Entry x:Name="txtedad" Placeholder="Ingrese su edad" Keyboard="Numeric"></Entry>
        <Button x:Name="btnbienvenida" Text="Bienvenido" Clicked="Btnbienvenida_Clicked"></Button>
    </StackLayout>

</ContentPage>
